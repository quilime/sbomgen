{
    "compilerOptions": {
      "baseUrl": "./src",
      "jsx": "react",
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "paths": {
        "~*": ["./src/*"]
      },
      "strict": true,
      "skipLibCheck": true,
      "target": "ES2015",
      "module": "ES2020",
      "types": ["vite/client"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
